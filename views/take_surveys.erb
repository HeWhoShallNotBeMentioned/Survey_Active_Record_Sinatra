<div class="row">
  <div class="col-sm-12">
    <% if @surveys.any?() %>
    <ul class="list-group">
      <% @surveys.each() do |survey| %>
      <li class="list-group-item"><a href="/take/surveys/<%= survey.id %>/edit"><%= survey.title %></a></li>
      <% end %>
    </ul>
    <% else %>
    <h3>There are no surveys.</h3>
    <% end %>
  </div>
</div>
